<resources>
  <fonts>
    <font name="boycott" filename="fonts/Boycott/Boycott.ttf"/>
    <font name="vera" filename="fonts/Vera/Vera.ttf"/>
    <font name="veraBold" filename="fonts/Vera/VeraBd.ttf"/>
    <font name="blackCasper" filename="fonts/BlackCasper/BlackCasper.ttf"/>
  </fonts>
  <ninePatches>
    <ninePatch name="speech2" filename="speech2.png" top="10" right="31" bottom="23" left="10"/>
    <ninePatch name="speech" filename="speech.png" top="10" right="31" bottom="23" left="10"/>
  </ninePatches>
  <poses>
    <pose name="shieldFactory" filename="shieldFactory.png" offsetX="9" offsetY="37"/>
    <pose name="sheild-l" filename="sheild-l.png"/>
    <pose name="alien1b" filename="alien1b.png" direction="-90.0"/>
    <pose name="alien3a" filename="alien3a.png" direction="-90.0"/>
    <pose name="shield-r" filename="shield-r.png"/>
    <pose name="pixel" filename="pixel.png"/>
    <pose name="ship" filename="ship.png" direction="90.0"/>
    <pose name="alien3b" filename="alien3b.png" direction="-90.0"/>
    <pose name="bomb1" filename="bomb1.png" direction="-90.0"/>
    <pose name="white" filename="white.png" offsetX="0" offsetY="480"/>
    <pose name="alien2a" filename="alien2a.png" direction="-90.0"/>
    <pose name="alien2b" filename="alien2b.png" direction="-90.0"/>
    <pose name="level-completed" filename="level-completed.png" offsetY="42"/>
    <pose name="alien1a" filename="alien1a.png" direction="-90.0"/>
    <pose name="level" filename="level.png" offsetY="44"/>
    <pose name="ship2" filename="ship2.png" direction="90.0"/>
    <pose name="bomb2" filename="bomb2.png" direction="-90.0"/>
    <pose name="factory" filename="factory.png"/>
    <pose name="earth" filename="earth.png" offsetX="0" offsetY="480"/>
    <pose name="shield" filename="shield.png"/>
    <pose name="bullet" filename="bullet.png" direction="90.0"/>
  </poses>
  <sounds>
    <sound name="explode" filename="sounds/explode.ogg"/>
    <sound name="ahh2" filename="sounds/ahh2.ogg"/>
    <sound name="ricochet" filename="sounds/ricochet.ogg"/>
    <sound name="ahh1" filename="sounds/ahh1.ogg"/>
    <sound name="ahh3" filename="sounds/ahh3.ogg"/>
    <sound name="fire" filename="sounds/fire.ogg"/>
  </sounds>
  <animations>
    <animation name="alien3">
      <sequence loops="1">
        <frames/>
      </sequence>
    </animation>
    <animation name="fadeIn">
      <sequence loops="1">
        <alpha ticks="40" from="0.0" to="255.0" profile="linear"/>
      </sequence>
    </animation>
    <animation name="alien1">
      <sequence loops="1">
        <frames/>
      </sequence>
    </animation>
    <animation name="alienYell">
      <parallel loops="1">
        <move ticks="80" dx="0.0" dy="0.1" profile="unit"/>
        <alpha ticks="80" from="255.0" to="0.0" profile="linear"/>
        <turn ticks="80" from="0.0" to="2.0" profile="linear"/>
      </parallel>
    </animation>
    <animation name="alien2">
      <sequence loops="1">
        <frames/>
      </sequence>
    </animation>
    <animation name="bomb">
      <sequence loops="0">
        <pingPong>
          <frame pose="bomb1" delay="10"/>
          <frame pose="bomb2" delay="10"/>
        </pingPong>
      </sequence>
    </animation>
    <animation name="deathSpiral">
      <parallel loops="1">
        <move ticks="40" dx="1.0" dy="1.0" profile="unit"/>
        <alpha ticks="40" from="255.0" to="1.0" profile="linear"/>
        <turn ticks="40" from="10.0" to="10.0" profile="linear"/>
      </parallel>
    </animation>
    <animation name="toHeaven">
      <parallel loops="1">
        <move ticks="120" dx="0.0" dy="0.5" profile="unit"/>
        <alpha ticks="120" from="255.0" to="0.0" profile="linear"/>
      </parallel>
    </animation>
  </animations>
  <costumes>
    <costume name="alien">
      <string name="death">I iz Ded</string>
      <string name="death">Shit!</string>
      <string name="death">Ow!</string>
      <string name="death">Ouchy!</string>
      <string name="death">You git</string>
      <string name="death">U Kill Me</string>
      <string name="death">Eeek</string>
      <string name="death">I'll be back</string>
      <string name="death">OMG</string>
      <font name="speech" font="vera"/>
      <animation name="birth" animation="fadeIn"/>
      <animation name="yell" animation="alienYell"/>
      <animation name="death" animation="deathSpiral"/>
    </costume>
    <costume name="alien3" extends="alien" behaviour="uk.co.nickthecoder.drunkinvaders.AlienBehaviour">
      <pose name="tick" pose="alien3a"/>
      <pose name="default" pose="alien3a"/>
      <pose name="tock" pose="alien3b"/>
      <sound name="death" sound="ahh3"/>
    </costume>
    <costume name="shieldFactory" behaviour="uk.co.nickthecoder.drunkinvaders.ShieldFactory">
      <pose name="default" pose="shieldFactory"/>
    </costume>
    <costume name="shield-l" behaviour="uk.co.nickthecoder.drunkinvaders.ShieldBehaviour">
      <pose name="default" pose="sheild-l"/>
    </costume>
    <costume name="shield-r" behaviour="uk.co.nickthecoder.drunkinvaders.ShieldBehaviour">
      <pose name="default" pose="shield-r"/>
    </costume>
    <costume name="ship" behaviour="uk.co.nickthecoder.drunkinvaders.ShipBehaviour">
      <pose name="default" pose="ship"/>
      <pose name="charged" pose="ship"/>
      <pose name="fire" pose="ship2"/>
      <string name="death">The earth is doomed</string>
      <string name="death">The aliens have won!</string>
      <sound name="death" sound="explode"/>
      <sound name="fire" sound="fire"/>
      <font name="speech" font="vera"/>
      <animation name="yell" animation="toHeaven"/>
    </costume>
    <costume name="alien1" extends="alien" behaviour="uk.co.nickthecoder.drunkinvaders.AlienBehaviour">
      <pose name="tick" pose="alien1a"/>
      <pose name="default" pose="alien1a"/>
      <pose name="tock" pose="alien1b"/>
      <sound name="death" sound="ahh1"/>
    </costume>
    <costume name="alien2" extends="alien" behaviour="uk.co.nickthecoder.drunkinvaders.AlienBehaviour">
      <pose name="tick" pose="alien2a"/>
      <pose name="default" pose="alien2a"/>
      <pose name="tock" pose="alien2b"/>
      <sound name="death" sound="ahh2"/>
    </costume>
    <costume name="level" behaviour="uk.co.nickthecoder.drunkinvaders.PickLevelBehaviour">
      <pose name="default" pose="level"/>
      <pose name="completed" pose="level-completed"/>
    </costume>
    <costume name="bomb">
      <pose name="default" pose="bomb1"/>
      <animation name="default" animation="bomb"/>
    </costume>
    <costume name="factory" behaviour="uk.co.nickthecoder.drunkinvaders.AlienFactory">
      <pose name="default" pose="factory"/>
    </costume>
    <costume name="earth">
      <pose name="default" pose="earth"/>
    </costume>
    <costume name="shield" behaviour="uk.co.nickthecoder.drunkinvaders.ShieldBehaviour">
      <pose name="default" pose="shield"/>
    </costume>
    <costume name="bullet">
      <pose name="default" pose="bullet"/>
      <sound name="shot" sound="ricochet"/>
    </costume>
  </costumes>
  <scenes>
    <scene name="levels" filename="scenes/levels.xml"/>
    <scene name="level05" filename="scenes/level05.xml"/>
    <scene name="level04" filename="scenes/level04.xml"/>
    <scene name="menu" filename="scenes/menu.xml"/>
    <scene name="about" filename="scenes/about.xml"/>
    <scene name="level03" filename="scenes/level03.xml"/>
    <scene name="level02" filename="scenes/level02.xml"/>
    <scene name="level01" filename="scenes/level01.xml"/>
    <scene name="completed" filename="scenes/completed.xml"/>
  </scenes>
</resources>
