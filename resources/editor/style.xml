<rules>

    <resources filename="resources.xml"/>

    <include filename="../defaultGui/style.xml"/>

    <rule criteria="root.editor" paddingTop="10" paddingBottom="0" paddingLeft="10" paddingRight="10"/>

    <rule criteria=".animationIndent" spacing="6" marginLeft="20" />
    <rule criteria=".animationTree" spacing="10" paddingRight="25" />
    
    <rule criteria=".checkered" background="checkers"/>
    <rule criteria=".pickGrid" spacing="10"/>
    <rule criteria=".pickGrid * button" width="120" minimumHeight="60"/>
    <rule criteria=".pickGrid * button label" maximumWidth="100" font="regular"/>
    
    <rule criteria=".costumes" padding="0" spacing="2"/>
    <rule criteria=".costumes button" width="60" height="60" padding="0"/>
    
    <rule criteria=".exampleFont" font="null" fontSize="30"/>

</rules>
