<resources>
  <game className="uk.co.nickthecoder.tetra.Tetra" width="640" height="480" title="Tetra" iconFilename="icon.bmp"/>
  <fonts>
    <font name="Boycott" filename="fonts/Boycott.ttf"/>
  </fonts>
  <ninePatches/>
  <poses>
    <pose name="background" filename="background.png"/>
    <pose name="blue" filename="blue.png"/>
    <pose name="board" filename="board.png"/>
    <pose name="button" filename="button.png"/>
    <pose name="cyan" filename="cyan.png"/>
    <pose name="green" filename="green.png"/>
    <pose name="orange" filename="orange.png"/>
    <pose name="purple" filename="purple.png"/>
    <pose name="red" filename="red.png"/>
    <pose name="yellow" filename="yellow.png"/>
  </poses>
  <sounds>
    <sound name="explode" filename="sounds/explode.ogg"/>
    <sound name="pop" filename="sounds/pop.ogg"/>
    <sound name="shatter" filename="sounds/shatter.ogg"/>
  </sounds>
  <animations>
    <animation name="moveDown1">
      <compound sequence="false" loops="1">
        <move dx="0.0" dy="-20.0" ticks="10" ease="linear"/>
      </compound>
    </animation>
    <animation name="moveDown2">
      <compound sequence="false" loops="1">
        <move dx="0.0" dy="-40.0" ticks="15" ease="linear"/>
      </compound>
    </animation>
    <animation name="moveDown3">
      <compound sequence="false" loops="1">
        <move dx="0.0" dy="-60.0" ticks="20" ease="linear"/>
      </compound>
    </animation>
    <animation name="moveDown4">
      <compound sequence="false" loops="1">
        <move dx="0.0" dy="-80.0" ticks="30" ease="linear"/>
        <compound sequence="true" loops="1">
          <turn turn="30.0" ticks="5" ease="linear"/>
          <turn turn="-30.0" ticks="5" ease="linear"/>
          <turn turn="30.0" ticks="5" ease="linear"/>
          <turn turn="-30.0" ticks="5" ease="linear"/>
          <turn turn="30.0" ticks="5" ease="linear"/>
          <turn turn="-30.0" ticks="5" ease="linear"/>
        </compound>
      </compound>
    </animation>
  </animations>
  <costumes>
    <costume name="background">
      <pose name="default" pose="background"/>
    </costume>
    <costume name="square">
      <pose name="default" pose="blue"/>
      <animation name="moveDown1" animation="moveDown1"/>
      <animation name="moveDown2" animation="moveDown2"/>
      <animation name="moveDown3" animation="moveDown3"/>
      <animation name="moveDown4" animation="moveDown4"/>
    </costume>
    <costume name="blue" extends="square">
      <pose name="default" pose="blue"/>
    </costume>
    <costume name="board">
      <pose name="default" pose="board"/>
    </costume>
    <costume name="button" behaviour="uk.co.nickthecoder.itchy.extras.Button">
      <pose name="default" pose="button"/>
    </costume>
    <costume name="cyan" extends="square">
      <pose name="default" pose="cyan"/>
    </costume>
    <costume name="green" extends="square">
      <pose name="default" pose="green"/>
    </costume>
    <costume name="orange" extends="square">
      <pose name="default" pose="orange"/>
    </costume>
    <costume name="purple" extends="square">
      <pose name="default" pose="purple"/>
    </costume>
    <costume name="red" extends="square">
      <pose name="default" pose="red"/>
    </costume>
    <costume name="yellow" extends="square">
      <pose name="default" pose="yellow"/>
    </costume>
  </costumes>
  <scenes>
    <scene name="main"/>
    <scene name="menu"/>
  </scenes>
</resources>
