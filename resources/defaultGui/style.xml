<rules>
   
    <resources filename="resources.xml"/>

    <rule criteria="root" background="background"/>   
    <rule criteria="label" font="regular" fontSize="14" color="#c6c1b8" />
    <rule criteria=".bold" font="bold"/>
    
    <rule criteria="titleBar" background="titleBar" paddingTop="16" paddingBottom="6" paddingLeft="20" paddingRight="20" />
    <rule criteria=".focus * titleBar" background="titleBar-focus" />
    <rule criteria="titleBar *" color="#c6c1b8" font="bold" fontSize="16" /> 
    <rule criteria="clientArea" background="clientArea" padding="20" spacing="10"/>
    <rule criteria=".focus * clientArea" background="clientArea-focus" />

    <rule criteria="button" background="button" padding="10" minimumWidth="80" />
    <rule criteria="button.compact" padding="8" minimumWidth="0"/>
    <rule criteria="button.focus" background="button-focus" />
    <rule criteria="button.down" background="button-down" />
    <rule criteria="button.selected" background="button-down" />
    <rule criteria="button.plain" background="" padding="4" minimumWidth="0"/>
    <rule criteria="button label" font="bold" color="#c6c1b8" />
    

    <rule criteria="slider" background="slider" paddingLeft="4" paddingRight="4" width="100" height="22"/>
    <rule criteria="slider .knob" image="sliderKnob" />
    <rule criteria="slider.focus .knob" image="sliderKnob-focus" />
    
    <rule criteria="swatch" background="swatch" padding="2"/>
    <rule criteria="swatch image" background="checkered"/>
    
    <rule criteria=".toolbar" background="panel1" />
    <rule criteria=".toolbar button" padding="7" background="button-naked" minimumWidth="0" marginLeft="-1" marginRight="-1"/>
    <rule criteria=".toolbar button" minimumWidth="36" minimumHeight="36"/>
    <rule criteria=".toolbar button.focus" background="button-naked-focus"/>
    <rule criteria=".toolbar button.selected" background="button-naked-selected"/>
    <rule criteria=".toolbar button.down" background="button-naked-down"/>
    
    <rule criteria="notebook" />
    <rule criteria="notebookPages" />
    <rule criteria="notebookTabs" spacing="-2" padding="2" marginBottom="5" background="panel1"/>
    <rule criteria="tab" background="button-naked" padding="10" margin="0"/>
    <rule criteria="tab.selected" background="button-naked-selected"/>
    <rule criteria="tab.focus" background="button-naked-focus" />
    <rule criteria="tab.down" background="button-naked-down" />
    <rule criteria="tab *" font="bold" color="#a39b8c" />
    <rule criteria="tab.selected *" color="#c6c1b8" />

    <rule criteria="table" background="panel1" padding="5" paddingBottom="10"/>
    <rule criteria="tableHeadings" background="tableHeadings"/>
    <rule criteria="tableData" />
    <rule criteria="tableRow" background="row" />
    <rule criteria="tableRow.selected" background="row-selected"/>
    <rule criteria=".focus * tableRow.selected" background="row-focus" />
    <rule criteria=".focus * tableRow.selected * label" color="#211b12" />
    <rule criteria=".focus * tableRow.selected * button label" color="#c6c1b8" />
    <rule criteria=".cell" marginTop="4" marginRight="6" marginBottom="4" marginLeft="6" />
    <rule criteria=".heading" margin="6" font="bold" minimumWidth="0" background="" padding="0"/>
    <rule criteria=".heading label" />
    <rule criteria="tableRow * button" padding="8" margin="0" minimumWidth="0" />

    <rule criteria="textBox" background="text" padding="10" />
    <rule criteria="textBox.focus" background="text-focus"/>
    <rule criteria="textBox.focus label" color="#eac328"/>
    <rule criteria="textBox.error" background="text-error" />
    <rule criteria="textBox.error label"  color="#000" />

    <rule criteria="textArea" background="text" padding="10" />
    <rule criteria="textArea.focus" background="text-focus"/>
    <rule criteria="textArea.focus label" color="#eac328"/>
    <rule criteria="textArea.error" background="text-error" />
    <rule criteria="textArea.error label"  color="#000" />

    <rule criteria="comboBox.error textBox" background="text-error" />
    <rule criteria="comboBox.error textBox label" color="#000" />
    <rule criteria="caret" background="caret" marginLeft="-6" paddingTop="-10" paddingBottom="-10" paddingLeft="12" />

    <rule criteria="vScroll" paddingRight="20"/>
    <rule criteria="scrollbar.v" padding="4" marginTop="4" marginBottom="4" marginRight="-6"/>
    <rule criteria="scroller.v" background="scrollerV" width="14" />

    <rule criteria="checkbox" background="checkbox" width="25" height="25"/>
    <rule criteria="checkbox image" image="checked" marginLeft="4" marginTop="6"/>
    
    <rule criteria="form" marginLeft="10" marginRight="10" xSpacing="20"/>
    <rule criteria=".form" spacing="10" />
    <rule criteria=".buttonBar" spacing="10" marginTop="10" marginBottom="10"/>
    <rule criteria=".buttonColumn" spacing="10" margin="10"/>
    <rule criteria=".error" color="#ff0000" />
    <rule criteria=".hint" color="#228822" marginLeft="10" />
    
    <rule criteria=".combo" background="combo" padding="1" spacing="-3"/>
    <rule criteria=".combo textBox" background="text-naked"/>
    <rule criteria=".combo textBox.focus" background="text-naked-focus"/>
    <rule criteria=".combo textBox.focus" background="text-naked-focus"/>
    <rule criteria=".combo textBox.error" background="text-naked-error"/>
    <rule criteria="comboBox.error textBox" background="text-naked-error"/>
    <rule criteria=".combo button" background="button-naked" minimumWidth="0"/>
    <rule criteria=".combo button.focus" background="button-focus"/>
    <rule criteria=".combo button.down" background="button-naked-down"/>
    <rule criteria=".combo button.selected" background="button-naked-selected"/>
    
    <rule criteria=".panel" background="panel1" padding="10" />
    <rule criteria=".panel * .panel" background="panel2"/>
    <rule criteria=".panel * .panel * .panel" background="panel1"/>
    <rule criteria=".panel * .panel * .panel * .panel" background="panel2"/>

    <rule criteria=".picker" background="panel1" paddingTop="8" paddingRight="4" paddingBottom="8" paddingLeft="4" marginLeft="16" />
    <rule criteria=".picker button" background="row" paddingTop="4" paddingRight="10" paddingBottom="4" paddingLeft="4"/>
    <rule criteria=".picker button.focus" background="row-focus" color="#211b12"/>
    <rule criteria=".picker button.focus label" color="#211b12"/>
</rules>
